// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model Student {
  id        String   @id @default(cuid())
  rollNo    String
  name      String
  email     String
  class     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  payments           Payment[]
  printDistributions PrintDistribution[]
  participatingEvents Event[]

  @@unique([rollNo, class])
  @@index([rollNo])
  @@index([class])
  @@index([name])
}

model Event {
  id             String   @id @default(cuid())
  name           String   @default("New Event")
  description    String   @default("")
  deadline       DateTime @default(now())
  cost           Float    @default(0)
  paymentOptions String   @default("[\"Razorpay\"]") // Stored as JSON string
  qrCodeUrl      String?
  category       String   @default("Normal") // 'Normal' | 'Print'
  status         String   @default("PUBLISHED") // 'DRAFT' | 'PUBLISHED'
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  payments           Payment[]
  printDistributions PrintDistribution[]

  participants       Student[]
  
  @@index([deadline])
  @@index([category])
  @@index([createdAt])
}

model Payment {
  id                String   @id @default(cuid())
  amount            Float
  paymentDate       DateTime @default(now())
  transactionId     String?   // Optional because it might not exist for Cash
  status            String   // 'Paid' | 'Pending' | 'Failed' | 'Verification Pending'
  paymentMethod     String   // 'Razorpay' | 'QR Scan' | 'Cash' | 'N/A'
  screenshotUrl     String?
  razorpay_order_id String?
  
  // Manual payment tracking
  isManualEntry     Boolean  @default(false)
  recordedBy        String?  // User ID who recorded the payment
  manualEntryNotes  String?  // Admin notes for manual entry
  receiptNumber     String?  // Optional receipt number
  
  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  eventId   String
  event     Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([studentId])
  @@index([eventId])
  @@index([status])
  @@index([paymentDate])
  @@index([studentId, eventId])
}

model PrintDistribution {
  id            String   @id @default(cuid())
  distributedAt DateTime @default(now())
  
  studentId String
  student   Student @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  eventId   String
  event     Event   @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([studentId])
  @@index([eventId])
}

model QrCode {
  id   String @id @default(cuid())
  name String
  url  String

  @@index([name])
}
